<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="match_parent" android:background="#FFFFFF">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="16dp">
        <!--  Title  -->
        <TextView android:id="@+id/titleText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Update Employee" android:textSize="20sp" android:textStyle="bold" android:textColor="#000" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Email Label  -->
        <TextView android:id="@+id/emailLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Email" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/titleText" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="16dp"/>
        <EditText android:id="@+id/emailEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Enter Email" android:textColor="#333333" android:inputType="textEmailAddress" app:layout_constraintTop_toBottomOf="@id/emailLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Full Name Label  -->
        <TextView android:id="@+id/fullNameLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Full Name" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/emailEditText" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/fullNameEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Enter Full Name" android:textColor="#333333" android:inputType="textPersonName" app:layout_constraintTop_toBottomOf="@id/fullNameLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Phone Label  -->
        <TextView android:id="@+id/phoneLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Phone" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/fullNameEditText" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/phoneEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Enter Phone" android:textColor="#333333" android:inputType="phone" app:layout_constraintTop_toBottomOf="@id/phoneLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Status Checkbox  -->
        <CheckBox android:id="@+id/statusCheckBox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Active" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/phoneEditText" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        <!--  Department ID Label  -->
        <TextView android:id="@+id/departmentLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Department ID" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/statusCheckBox" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/departmentIdEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Enter Department ID" android:textColor="#333333" android:inputType="number" app:layout_constraintTop_toBottomOf="@id/departmentLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Designation ID Label  -->
        <TextView android:id="@+id/designationLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Designation ID" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/departmentIdEditText" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/designationIdEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Enter Designation ID" android:textColor="#333333" android:inputType="number" app:layout_constraintTop_toBottomOf="@id/designationLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Android ID Label  -->
        <TextView android:id="@+id/androidIdLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Android ID" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/designationIdEditText" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/androidIdEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Enter Android ID or leave empty" android:textColor="#333333" android:inputType="text" app:layout_constraintTop_toBottomOf="@id/androidIdLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Salary Structure Label  -->
        <TextView android:id="@+id/salaryStructureLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Salary Structure Type" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/androidIdEditText" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        <Spinner android:id="@+id/salaryStructureSpinner" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@id/salaryStructureLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Base Salary Label  -->
        <TextView android:id="@+id/baseSalaryLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Base Salary" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/salaryStructureSpinner" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/baseSalaryEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Enter Base Salary" android:textColor="#333333" android:inputType="numberDecimal" app:layout_constraintTop_toBottomOf="@id/baseSalaryLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Normal Hour Rate Label  -->
        <TextView android:id="@+id/normalHourRateLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Normal Hour Rate" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/baseSalaryEditText" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/normalHourRateEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Enter Normal Hour Rate" android:textColor="#333333" android:inputType="numberDecimal" app:layout_constraintTop_toBottomOf="@id/normalHourRateLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Overtime Hour Rate Label  -->
        <TextView android:id="@+id/overtimeHourRateLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Overtime Hour Rate" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/normalHourRateEditText" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/overtimeHourRateEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Enter Overtime Hour Rate" android:textColor="#333333" android:inputType="numberDecimal" app:layout_constraintTop_toBottomOf="@id/overtimeHourRateLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Expected Hours Label  -->
        <TextView android:id="@+id/expectedHoursLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Expected Hours per Day" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/overtimeHourRateEditText" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/expectedHoursPerDayEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Enter Expected Hours" android:textColor="#333333" android:inputType="numberDecimal" app:layout_constraintTop_toBottomOf="@id/expectedHoursLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Working Days Label  -->
        <TextView android:id="@+id/workingDaysLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Working Days per Week" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/expectedHoursPerDayEditText" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/workingDaysPerWeekEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Enter Working Days" android:textColor="#333333" android:inputType="number" app:layout_constraintTop_toBottomOf="@id/workingDaysLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Employee Code Label  -->
        <TextView android:id="@+id/employeeCodeLabel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Employee Code" android:textColor="#333333" app:layout_constraintTop_toBottomOf="@id/workingDaysPerWeekEditText" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"/>
        <EditText android:id="@+id/employeeCodeEditText" android:layout_width="0dp" android:layout_height="wrap_content" android:hint="Enter Employee Code" android:textColor="#333333" android:inputType="text" app:layout_constraintTop_toBottomOf="@id/employeeCodeLabel" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
        <!--  Update Button  -->
        <Button android:id="@+id/updateButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Update" android:backgroundTint="#4A148C" android:textColor="#FFF" app:cornerRadius="8dp" app:layout_constraintTop_toBottomOf="@id/employeeCodeEditText" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>