<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="#EDE7F6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:id="@+id/page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HR Dashboard"
                android:fontFamily="@font/font1"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/see_all_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All"
                android:textColor="#4A148C"
                android:textSize="18sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="18dp"
            card_view:cardElevation="8dp"
            card_view:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employee Management"
                    android:textSize="22sp"
                    android:textColor="#4A148C"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnAddEmployee"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card_view:cardCornerRadius="16dp"
                        card_view:cardElevation="6dp"
                        card_view:cardBackgroundColor="#FFFFFF"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_add_employee"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add Employee"
                                android:textColor="#4A148C"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cont_holidays"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card_view:cardCornerRadius="16dp"
                        card_view:cardElevation="6dp"
                        card_view:cardBackgroundColor="#FFFFFF"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/holiday"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage Holidays"
                                android:textColor="#4A148C"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/departmentBtn"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card_view:cardCornerRadius="16dp"
                        card_view:cardElevation="6dp"
                        card_view:cardBackgroundColor="#FFFFFF"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_departments"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Departments"
                                android:textColor="#4A148C"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/jobTitleBtn"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card_view:cardCornerRadius="16dp"
                        card_view:cardElevation="6dp"
                        card_view:cardBackgroundColor="#FFFFFF"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_designations"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Designations"
                                android:textColor="#4A148C"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="18dp"
            card_view:cardElevation="8dp"
            card_view:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payroll Management"
                    android:textSize="22sp"
                    android:textColor="#4A148C"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Additional_Salary"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card_view:cardCornerRadius="16dp"
                        card_view:cardElevation="6dp"
                        card_view:cardBackgroundColor="#FFFFFF"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_additional_salary"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Additional Salary"
                                android:textColor="#4A148C"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/salary_slip"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card_view:cardCornerRadius="16dp"
                        card_view:cardElevation="6dp"
                        card_view:cardBackgroundColor="#FFFFFF"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_payroll"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salary Slips"
                                android:textColor="#4A148C"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/workPolicy"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card_view:cardCornerRadius="16dp"
                        card_view:cardElevation="6dp"
                        card_view:cardBackgroundColor="#FFFFFF"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_policy"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Policies"
                                android:textColor="#4A148C"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/salary_drafts"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card_view:cardCornerRadius="16dp"
                        card_view:cardElevation="6dp"
                        card_view:cardBackgroundColor="#FFFFFF"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_drafts"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Salary Drafts"
                                android:textColor="#4A148C"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="18dp"
            card_view:cardElevation="8dp"
            card_view:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time and Leave Management"
                    android:textSize="22sp"
                    android:textColor="#4A148C"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/HrLeaveRequest"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card_view:cardCornerRadius="16dp"
                        card_view:cardElevation="6dp"
                        card_view:cardBackgroundColor="#FFFFFF"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">
                                <ImageView
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/leave"
                                    android:layout_marginBottom="8dp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Leave Requests"
                                    android:textColor="#4A148C"
                                    android:textSize="15sp"
                                    android:textAlignment="center"
                                    android:textStyle="bold" />
                            </LinearLayout>
                            <TextView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:text="6"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:background="#4A148C"
                                android:gravity="center"
                                android:layout_gravity="end|top"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="16dp" />
                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/HrOverRequest"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card_view:cardCornerRadius="16dp"
                        card_view:cardElevation="6dp"
                        card_view:cardBackgroundColor="#FFFFFF"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/overtime"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Overtime Requests"
                                android:textColor="#4A148C"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="18dp"
            card_view:cardElevation="8dp"
            card_view:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HR Services for Employees"
                    android:textSize="22sp"
                    android:textColor="#4A148C"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:alignmentMode="alignMargins"
                    android:columnOrderPreserved="false">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnQr"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card_view:cardCornerRadius="16dp"
                        card_view:cardElevation="6dp"
                        card_view:cardBackgroundColor="#FFFFFF"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/qr"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Scan QR"
                                android:textColor="#4A148C"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/gps"
                        android:layout_width="0dp"
                        android:layout_height="140dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        card_view:cardCornerRadius="16dp"
                        card_view:cardElevation="6dp"
                        card_view:cardBackgroundColor="#FFFFFF"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">
                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/gps"
                                android:layout_marginBottom="8dp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GPS Tracking"
                                android:textColor="#4A148C"
                                android:textSize="15sp"
                                android:textAlignment="center"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:backgroundTint="#4A148C"
            android:padding="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="32dp"
            android:layout_gravity="center" />

    </LinearLayout>
</ScrollView>