<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6">

    <LinearLayout
        android:id="@+id/userAccountSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#EDE7F6"
        android:padding="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">


            <ImageView
                android:id="@+id/userProfileImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="User Profile Image"
                android:scaleType="centerCrop"
                android:src="@drawable/user" />

            <LinearLayout
                android:id="@+id/userInfoContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="User Name"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/userRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Employee"
                    android:textColor="#616161"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/actionIconsContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/locationIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/location"
                    android:contentDescription="Location Icon"
                    android:layout_marginEnd="12dp"/>
                <ImageView
                    android:id="@+id/notificationBell"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:contentDescription="Notification Bell"
                    android:src="@drawable/bell"
                    app:tint="#000000"
                    android:background="?attr/selectableItemBackgroundBorderless" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!-- Middle Section -->
    <ScrollView
        android:id="@+id/middleSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/userAccountSection">

        <LinearLayout
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Date Section -->
            <TextView
                android:id="@+id/currentDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="August 2025"
                android:textColor="#290B4E"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold"
                android:textStyle="bold" />

            <!-- Calendar Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/weekDaysContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/sundayText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="S"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#777777" />

                        <TextView
                            android:id="@+id/mondayText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="M"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#777777" />

                        <TextView
                            android:id="@+id/tuesdayText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="T"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#777777" />

                        <TextView
                            android:id="@+id/wednesdayText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="W"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#777777" />

                        <TextView
                            android:id="@+id/thursdayText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="T"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="#777777" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dateNumbersContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/date3Text"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="03"
                            android:fontFamily="@font/poppins_medium"
                            android:background="@drawable/circle_background"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/date4Text"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="04"
                            android:fontFamily="@font/poppins_medium"
                            android:background="@drawable/circle_background"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/date5Text"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="05"
                            android:fontFamily="@font/poppins_medium"
                            android:background="#4A148C"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/date6Text"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="06"
                            android:fontFamily="@font/poppins_medium"
                            android:background="@drawable/circle_background"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/date7Text"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="07"
                            android:fontFamily="@font/poppins_medium"
                            android:background="@drawable/circle_background"
                            android:textColor="#000000" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Check-In/Check-Out Cards -->
            <LinearLayout
                android:id="@+id/timeCardsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/checkInCard"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:id="@+id/checkInCardContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginEnd="8dp"
                                android:contentDescription="Check In Icon"
                                android:src="@drawable/in"
                                app:tint="#000000" />

                            <TextView
                                android:id="@+id/checkInLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Check In"
                                android:textColor="#4A148C"
                                android:textSize="13sp"
                                android:fontFamily="@font/poppins_medium" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/checkInTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="9:00 AM"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_regular"
                            android:textStyle="bold"
                            android:shadowColor="#40000000"
                            android:shadowDx="1"
                            android:shadowDy="1"
                            android:shadowRadius="2" />

                        <TextView
                            android:id="@+id/checkInStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="On Time"
                            android:textColor="#4CAF50"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_regular" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/checkOutCard"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:id="@+id/checkOutCardContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/out"
                                android:contentDescription="Check Out Icon"
                                app:tint="#000000"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/checkOutLabel"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Check Out"
                                android:textColor="#4A148C"
                                android:textSize="13sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/checkOutTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="5:00 PM"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:fontFamily="@font/poppins_regular"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/checkOutStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Completed"
                            android:textColor="#4CAF50"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_regular" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/startButton"
                    android:layout_width="285dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#4A148C"
                    android:text="Check In"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:cornerRadius="10dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/stopButton"
                    android:layout_width="286dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:backgroundTint="#4A148C"
                    android:text="Check Out"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    app:cornerRadius="10dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="14dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Check In -->
        <LinearLayout
            android:id="@+id/checkInLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/checkInIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/checkin"
                android:contentDescription="Check In"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@drawable/selector" />
            <TextView
                android:id="@+id/checkInLabeltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@drawable/selector"/>
        </LinearLayout>

        <!-- Salary -->
        <LinearLayout
            android:id="@+id/salaryLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/salaryIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/salary"
                android:contentDescription="Salary"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@drawable/selector" />
            <TextView
                android:id="@+id/salaryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@drawable/selector"/>
        </LinearLayout>

        <!-- Home -->
        <LinearLayout
            android:id="@+id/homeLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home"
                android:contentDescription="Home"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@drawable/selector" />
            <TextView
                android:id="@+id/homeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@drawable/selector"/>
        </LinearLayout>

        <!-- Attendance -->
        <LinearLayout
            android:id="@+id/attendanceLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/attendanceIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/attendance"
                android:contentDescription="Attendance"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@drawable/selector" />
            <TextView
                android:id="@+id/attendanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@drawable/selector"/>
        </LinearLayout>

        <!-- Requests -->
        <LinearLayout
            android:id="@+id/requestsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/requestsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/requests"
                android:contentDescription="Requests"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@drawable/selector" />
            <TextView
                android:id="@+id/requestsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Requests"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@drawable/selector"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>