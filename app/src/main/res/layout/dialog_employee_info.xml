<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_background"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Employee Name -->
        <TextView
            android:id="@+id/textEmployeeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="4dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333333"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Employee Designation -->
        <TextView
            android:id="@+id/textEmployeeDesignation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="14sp"
            android:textColor="#666666"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Employee Department -->
        <TextView
            android:id="@+id/textEmployeeDepartment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="14sp"
            android:textColor="#666666"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Employee Company -->
        <TextView
            android:id="@+id/textEmployeeCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="6dp"
            android:textSize="14sp"
            android:textColor="#666666"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Increase Type -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilIncreaseType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="6dp"
            android:hint="Type of Increase"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#4A148C"
            app:hintTextColor="#4A148C">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editIncreaseType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="#333333"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Increase Amount -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilIncreaseAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="6dp"
            android:hint="Amount of Increase"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#4A148C"
            app:hintTextColor="#4A148C">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editIncreaseAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColor="#333333"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Radio Group for Increase Type -->
        <RadioGroup
            android:id="@+id/radioGroupType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="6dp"
            android:padding="6dp">

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioPermanent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Permanent"
                android:textColor="#333333"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                app:buttonTint="#4A148C" />

            <com.google.android.material.radiobutton.MaterialRadioButton
                android:id="@+id/radioTemporary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Temporary"
                android:textColor="#333333"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                app:buttonTint="#4A148C" />
        </RadioGroup>

        <!-- Start Date -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="6dp"
            android:hint="Increase Start Date"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#4A148C"
            app:hintTextColor="#4A148C"
            app:endIconMode="custom"
            app:endIconDrawable="@android:drawable/ic_menu_my_calendar">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editStartDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#333333"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- End Date -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="6dp"
            android:hint="Increase End Date"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#4A148C"
            app:hintTextColor="#4A148C"
            app:endIconMode="custom"
            app:endIconDrawable="@android:drawable/ic_menu_my_calendar"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#333333"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Notes -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilIncreaseNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:hint="Notes (Optional)"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#4A148C"
            app:hintTextColor="#4A148C">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editIncreaseNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:maxLines="5"
                android:textColor="#333333"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddIncrease"
                android:layout_width="147dp"
                android:layout_height="50dp"
                android:layout_marginEnd="6dp"
                android:backgroundTint="#4A148C"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="Add Increase"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancel"
                android:layout_width="147dp"
                android:layout_height="50dp"
                android:backgroundTint="#E8EAF6"
                android:fontFamily="sans-serif-medium"
                android:padding="10dp"
                android:text="Cancel"
                android:textColor="#4A148C"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                app:rippleColor="#B39DDB"
                app:strokeColor="#512DA8"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>