<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_dialog_background"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Increase Amount -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilIncreaseAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Increase Amount"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxStrokeColor="#4A148C"
                    app:hintTextColor="#4A148C">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etIncreaseAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Increase Type -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilIncreaseType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Increase Type"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxStrokeColor="#4A148C"
                    app:hintTextColor="#4A148C">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etIncreaseType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Duration Type -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilSpinnerDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Duration Type"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxStrokeColor="#4A148C"
                    app:hintTextColor="#4A148C">

                    <Spinner
                        android:id="@+id/spinnerDurationType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Start Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="Start Date (yyyy-MM-dd)"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxStrokeColor="#4A148C"
                    app:hintTextColor="#4A148C"
                    app:endIconMode="custom"
                    app:endIconDrawable="@android:drawable/ic_menu_my_calendar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etStartDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- End Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="End Date (yyyy-MM-dd)"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxStrokeColor="#4A148C"
                    app:hintTextColor="#4A148C"
                    app:endIconMode="custom"
                    app:endIconDrawable="@android:drawable/ic_menu_my_calendar">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEndDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Notes -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNotes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Notes"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxStrokeColor="#4A148C"
                    app:hintTextColor="#4A148C">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNotes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:gravity="top|start"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submitButton"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:backgroundTint="#4A148C"
            android:fontFamily="sans-serif"
            android:padding="12dp"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:cornerRadius="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
