<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3E5F5">

    <LinearLayout
        android:id="@+id/titleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:padding="8dp"
            android:src="?attr/actionModeCloseDrawable"
            app:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary Draft"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginStart="13dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleContainer"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Employee Details Section (Collapsible) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/employeeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/employeeInfoTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Employee Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/employeeToggle"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#00000000"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Show Details"
                                android:textSize="16sp"
                                android:textColor="#7B1FA2" />

                            <ImageView
                                android:id="@+id/employeeArrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                app:tint="#7B1FA2" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/employeeContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/employeeNameText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name: Employee Name"
                            android:textSize="15sp"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/employeeCodeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Code: Employee Code"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/departmentText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Department: Department"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/designationText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Designation: Designation"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Salary Breakdown Section (Collapsible) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/salaryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/salaryStructureTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Salary Details"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/salaryToggle"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#00000000"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="20dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Show Details"
                                android:textSize="16sp"
                                android:textColor="#7B1FA2" />

                            <ImageView
                                android:id="@+id/salaryArrow"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                app:tint="#7B1FA2" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <LinearLayout
                        android:id="@+id/salaryContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:paddingTop="8dp">

                        <TextView
                            android:id="@+id/salaryStructureTypeText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Type: Salary Structure Type"
                            android:textSize="14sp"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/periodText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Period: Period"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/baseSalaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Base Salary: Base Salary"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/regularHoursText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Regular Hours: Regular Hours"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/regularHourRateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Regular Hour Rate: Regular Hour Rate"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/regularSalaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Regular Salary: Regular Salary"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/overtimeHoursText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Overtime Hours: Overtime Hours"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/overtimeHourRateText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Overtime Hour Rate: Overtime Hour Rate"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/overtimeSalaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Overtime Salary: Overtime Salary"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/bonusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bonus: Bonus"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/salaryIncrementText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Increment: Salary Increment"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/expectedWorkingDaysText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Expected Working Days: Expected Working Days"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/absentDaysText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Absent Days: Absent Days"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/statusText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status: Status"
                            android:textSize="14sp"
                            android:textColor="#000000"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Net Salary Highlight -->
            <androidx.cardview.widget.CardView
                android:id="@+id/netSalaryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#EDE7F6"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/netSalaryTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Net Salary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/netSalaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Net Salary: Net Salary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#311B92" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>