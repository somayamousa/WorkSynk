<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#EDE7F6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay Slip"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                card_view:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Employee Information"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Name:"
                            android:textSize="16sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/employeeNameText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#212121"
                            tools:text="John Doe" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Employee Code:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/employeeCodeText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="EMP-001" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Department:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/departmentText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="Sales" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Designation:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/designationText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="Manager" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Period:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/periodText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="01/06/2025 - 30/06/2025" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                card_view:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Salary Details"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Structure Type:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/salaryStructureTypeText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="Hourly" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/baseSalaryLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Base Salary:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/baseSalaryText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="5000.00 USD" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/regularHoursLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Regular Hours:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/regularHoursText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="160" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/regularHourRateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Regular Rate:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/regularHourRateText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="25.00 USD/hr" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/regularSalaryLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Regular Salary:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/regularSalaryText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="4000.00 USD" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/overtimeHoursLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Overtime Hours:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/overtimeHoursText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="20" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/overtimeHourRateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Overtime Rate:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/overtimeHourRateText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="37.50 USD/hr" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/overtimeSalaryLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Overtime Salary:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/overtimeSalaryText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="750.00 USD" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bonus:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/bonusText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="200.00 USD" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Increment:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/salaryIncrementText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="50.00 USD" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="4dp"
                card_view:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Deductions and Net Salary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="sans-serif-medium" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Expected Work Days:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/expectedWorkingDaysText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#424242"
                            tools:text="22" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Absent Days:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/absentDaysText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            tools:text="2" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Net Salary:"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                        <TextView
                            android:id="@+id/netSalaryText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            tools:text="5150.00 USD" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                card_view:cardCornerRadius="12dp"
                card_view:cardElevation="2dp"
                card_view:cardBackgroundColor="#FFFFFF">

                <TextView
                    android:id="@+id/statusText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:padding="16dp"
                    android:gravity="center"
                    tools:text="Status: Paid" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="16dp">
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>