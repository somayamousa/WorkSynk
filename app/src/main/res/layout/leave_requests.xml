<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6">

    <!-- Title Bar -->
    <TextView
        android:id="@+id/titleTextView"
        android:text="ðŸ“ Create Leave Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="?attr/actionModeCloseDrawable"
        android:contentDescription="Back"
        app:tint="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Form Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- âœ… Leave Type -->
                <TextView

                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:text="ðŸ“‚ Leave Type Name"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>
                <Spinner
                    android:id="@+id/leaveTypeSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fontFamily="@font/poppins_medium"
                    android:background="@drawable/spinner_background"
                    android:layout_marginTop="8dp" />

                <!-- âœ… Date Range -->
                <TextView

                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"/>
                <TextView
                    android:text="ðŸ“… Select Date"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>
                <Button
                    android:id="@+id/selectDateButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Select Dates"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:backgroundTint="#4A148C"
                    android:layout_marginTop="8dp" />

                <!-- âœ… Reason for Leave -->
                <TextView

                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"/>
                <TextView
                    android:text="ðŸ—’ï¸ Reason for Leave"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>
                <EditText
                    android:id="@+id/reasonTextView"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:hint="Write your reason here..."
                    android:fontFamily="@font/poppins_medium"
                    android:background="#F1F1F1"
                    android:padding="12dp"
                    android:textColor="#000"
                    android:textColorHint="#999"
                    android:gravity="top|start"
                    android:inputType="textMultiLine"
                    android:layout_marginTop="8dp"/>

                <!-- âœ… Attach Document (optional) -->
                <TextView
                    android:textSize="14sp"
                    android:textColor="#888888"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"/>
                <TextView
                    android:text="ðŸ“Ž Choose Attachment (optional)"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/fileNameTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No file selected"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#888888" />

                    <Button
                        android:id="@+id/chooseFileButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose File"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:backgroundTint="#4A148C" />
                </LinearLayout>

                <!-- âœ… Submit Button -->
                <Button
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="âœ“ Submit"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"
                    android:backgroundTint="#4A148C"
                    android:textSize="16sp"
                    android:layout_marginTop="32dp"/>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
