<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_dialog_background"
    android:padding="8dp">

    <EditText
        android:id="@+id/editHolidayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Holiday Name" />

    <EditText
        android:id="@+id/editHolidayDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Holiday Date" />

    <EditText
        android:id="@+id/editHolidayDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="No"
            android:textSize="14sp"
            android:textColor="#4A148C"
            android:backgroundTint="#E8EAF6"
            android:fontFamily="sans-serif-medium"
            android:contentDescription="No"
            android:elevation="4dp"
            android:paddingHorizontal="16dp"
            app:cornerRadius="28dp"
            app:rippleColor="#B39DDB"
            app:strokeColor="#512DA8"
            app:strokeWidth="2dp"/>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:backgroundTint="#4A148C"/>
    </LinearLayout>

</LinearLayout>
