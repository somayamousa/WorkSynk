<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#EDE7F6">

    <!-- Page Title -->
    <TextView
        android:id="@+id/pageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Employee"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView for Card -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/pageTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            card_view:cardBackgroundColor="#FFFFFF"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Full Name Input -->
                <EditText
                    android:id="@+id/editTextFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:textColorHint="#B0BEC5"
                    android:layout_marginBottom="8dp" />

                <!-- Email Input -->
                <EditText
                    android:id="@+id/editTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:textColorHint="#B0BEC5"
                    android:layout_marginBottom="8dp" />

                <!-- Password Input -->
                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:textColorHint="#B0BEC5"
                    android:layout_marginBottom="8dp" />

                <!-- Phone Input -->
                <EditText
                    android:id="@+id/editTextPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:textColorHint="#B0BEC5"
                    android:layout_marginBottom="8dp" />

                <!-- Department Spinner -->
                <Spinner
                    android:id="@+id/departments_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Department"
                    android:padding="12dp"
                    android:spinnerMode="dropdown"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:textColorHint="#B0BEC5"
                    android:layout_marginBottom="8dp" />

                <!-- Designation Spinner -->
                <Spinner
                    android:id="@+id/designations_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Designation"
                    android:padding="12dp"
                    android:spinnerMode="dropdown"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:textColorHint="#B0BEC5"
                    android:layout_marginBottom="8dp" />

                <!-- Salary Structure Spinner -->
                <Spinner
                    android:id="@+id/salary_structure_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Select Salary Structure"
                    android:padding="12dp"
                    android:spinnerMode="dropdown"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:textColorHint="#B0BEC5"
                    android:layout_marginBottom="8dp" />

                <!-- Base Salary Input -->
                <EditText
                    android:id="@+id/baseSalaryEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Base Salary"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:textColorHint="#B0BEC5"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Hour Deduction Cost Input -->
                <EditText
                    android:id="@+id/detectionHourCostEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hour Deduction Cost"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:textColorHint="#B0BEC5"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Normal Hour Rate Input -->
                <EditText
                    android:id="@+id/normalHourCostEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Normal Hour Rate"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:textColorHint="#B0BEC5"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Overtime Hour Rate Input -->
                <EditText
                    android:id="@+id/overTimeHourCostEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Overtime Hour Rate"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:textColorHint="#B0BEC5"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Expected Hours Input -->
                <EditText
                    android:id="@+id/expectedHoursEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Expected Hours Per Day"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:textColorHint="#B0BEC5"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Working Days Per Week Input -->
                <EditText
                    android:id="@+id/workingDaysPerWeekEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Working Days Per Week"
                    android:inputType="number"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:textColor="#000000"
                    android:textColorHint="#B0BEC5"
                    android:layout_marginBottom="8dp"
                    android:visibility="gone" />

                <!-- Working Days Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="📅 Working Days"
                    android:textColor="#4A148C"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/cbMonday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Monday"
                    android:textColor="#000000"
                    android:visibility="gone"
                    app:buttonTint="#4A148C" />

                <CheckBox
                    android:id="@+id/cbTuesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Tuesday"
                    android:textColor="#000000"
                    android:visibility="gone"
                    app:buttonTint="#4A148C" />

                <CheckBox
                    android:id="@+id/cbWednesday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Wednesday"
                    android:textColor="#000000"
                    android:visibility="gone"
                    app:buttonTint="#4A148C" />

                <CheckBox
                    android:id="@+id/cbThursday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Thursday"
                    android:textColor="#000000"
                    android:visibility="gone"
                    app:buttonTint="#4A148C" />

                <CheckBox
                    android:id="@+id/cbFriday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Friday"
                    android:textColor="#000000"
                    android:visibility="gone"
                    app:buttonTint="#4A148C" />

                <CheckBox
                    android:id="@+id/cbSaturday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Saturday"
                    android:textColor="#000000"
                    android:visibility="gone"
                    app:buttonTint="#4A148C" />

                <CheckBox
                    android:id="@+id/cbSunday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Sunday"
                    android:textColor="#000000"
                    android:visibility="gone"
                    app:buttonTint="#4A148C" />

                <RadioGroup
                    android:id="@+id/radioGroupStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/radioActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="Active"
                        android:textColor="#000000"
                        app:buttonTint="#4A148C" />

                    <RadioButton
                        android:id="@+id/radioInactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inactive"
                        android:textColor="#000000"
                        app:buttonTint="#4A148C" />
                </RadioGroup>

                <!-- Add Employee Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddEmployee"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="12dp"
                    android:text="➕ Add Employee"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    app:backgroundTint="#4A148C"
                    app:cornerRadius="12dp"
                    app:elevation="4dp"
                    app:rippleColor="#FFFFFF" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>