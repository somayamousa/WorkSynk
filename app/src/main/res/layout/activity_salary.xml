<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDE7F6"
    tools:context=".SalaryActivity">

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:src="?attr/actionModeCloseDrawable"
        android:contentDescription="Back"
        app:tint="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_horizontal"
        android:text="Payroll"
        android:textColor="#000000"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/monthYearContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/monthText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="MM"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:padding="12dp"
            android:background="#EEEEEE"
            android:inputType="number"
            android:maxLength="2"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:gravity="start|center_vertical"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/yearText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="YYYY"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_bold"
            android:padding="12dp"
            android:background="#EEEEEE"
            android:inputType="number"
            android:maxLength="4"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:gravity="start|center_vertical"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <Button
        android:id="@+id/fetchSalaryBtn"
        android:layout_width="179dp"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circular_button_background"
        android:fontFamily="@font/poppins_bold"
        android:text="Payroll Structure"
        android:textSize="14sp"
        android:enabled="true"
        android:focusable="true"
        android:clickable="true"
        android:textColor="@color/text_color_selector"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toStartOf="@id/downloadPdfBtn"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monthYearContainer" />

    <Button
        android:id="@+id/downloadPdfBtn"
        android:layout_width="179dp"
        android:layout_height="64dp"
        android:enabled="true"
        android:focusable="true"
        android:textColor="@color/text_color_selector"
        android:clickable="true"
        android:layout_marginStart="8dp"
        app:backgroundTint="@null"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circular_button_background"
        android:fontFamily="@font/poppins_bold"
        android:text="Download Salaryslip"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@+id/fetchSalaryBtn"
        app:layout_constraintTop_toBottomOf="@id/monthYearContainer" />

    <ImageView
        android:id="@+id/noRecordsImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="No Records Image"
        android:src="@drawable/img"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/monthYearContainer"
        app:layout_constraintBottom_toTopOf="@id/noRecordsText"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/noRecordsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="No salary slip yet"
        android:textColor="#888888"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noRecordsImage"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintVertical_bias="0.2" />

    <ScrollView
        android:id="@+id/salaryDetailsContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/fetchSalaryBtn"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Net Pay Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                app:cardCornerRadius="8dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Net Pay"
                        android:textSize="14sp"
                        android:textColor="#888888"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/netSalaryText"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/wordNetSalaryText"
                        android:textSize="14sp"
                        android:textColor="#777777"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#EDE7F6">

                <!-- Earnings Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/earningsHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:weightSum="1"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_input_add"
                                android:layout_marginEnd="8dp"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Earnings"
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_bold" />

                            <TextView
                                android:id="@+id/earningsText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:layout_marginEnd="8dp" />

                            <ImageView
                                android:id="@+id/earnings_arrow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/downarrow"
                                app:tint="#888888"
                                android:layout_gravity="end" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/earningsDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingTop="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                            <TextView
                                android:id="@+id/baseSalaryText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Base Salary: "
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="8dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/regularHoursText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Regular Work Hours: "
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="8dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/regularSalaryText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Regular Salary: "
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="8dp"
                                android:visibility="gone" />
                            <TextView
                                android:id="@+id/overtimeHoursText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Overtime Hours: "
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="8dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/overtimeSalaryText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Overtime Pay: "
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:layout_marginBottom="8dp"
                                android:visibility="gone" />


                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!-- Deductions Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/deductionsHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:weightSum="1"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/minus"
                                app:tint="#F44336"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Deductions"
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_bold" />

                            <TextView
                                android:id="@+id/deductionsText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹0.00"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:layout_marginEnd="8dp" />

                            <ImageView
                                android:id="@+id/deductions_arrow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/downarrow"
                                app:tint="#888888"
                                android:layout_gravity="end" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/deductionsDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingTop="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Bonus Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/bonusHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:weightSum="1"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_input_add"
                                android:layout_marginEnd="8dp"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Bonus"
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_bold" />

                            <TextView
                                android:id="@+id/bonusText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:layout_marginEnd="8dp" />

                            <ImageView
                                android:id="@+id/bonus_arrow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/downarrow"
                                app:tint="#888888"
                                android:layout_gravity="end" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bonusDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingTop="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Salary Increment Section -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="@android:color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/permanentIncreasesHeader"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:weightSum="1"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_input_add"
                                android:layout_marginEnd="8dp"
                                app:tint="#4CAF50" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Salary Increment"
                                android:textSize="16sp"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:fontFamily="@font/poppins_bold" />

                            <TextView
                                android:id="@+id/salaryIncrementText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#000000"
                                android:textStyle="bold"
                                android:layout_marginEnd="8dp" />

                            <ImageView
                                android:id="@+id/salary_increment_arrow"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/downarrow"
                                app:tint="#888888"
                                android:layout_gravity="end" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/permanentIncreasesDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:paddingTop="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Hidden TextViews for non-displayed data -->
            <TextView
                android:id="@+id/employeeFullnameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Name: "
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/employeeCodeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employee Code: "
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/departmentText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/jobTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Job Title: "
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/companyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name: "
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/periodStartText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Date:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/periodEndText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date: "
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/hourPerDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expected Hour Per Day: "
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/expectedWorkingDaysText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Working Days: "
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/salaryTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Type:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/regularHourRateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Regular Hour Rate: "
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/overtimeHourRateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overtime Rate: "
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/payslipNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salary Slip Number: "
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/absentDaysText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days of Absence:"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="14dp"
        android:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:id="@+id/checkInLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/checkInIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/checkin"
                android:contentDescription="Check In"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@drawable/selector" />
            <TextView
                android:id="@+id/checkInLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check In"
                android:textSize="13sp"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@drawable/selector"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/salaryLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:id="@+id/salaryIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/salary"
